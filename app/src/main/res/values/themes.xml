<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Coursework" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_500</item>
        <item name="colorPrimaryVariant">@color/main_700</item>
        <item name="colorOnPrimary">@color/base_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_500</item>
        <item name="colorSecondaryVariant">@color/active_700</item>
        <item name="colorOnSecondary">@color/main_100</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App" parent="Widget.Material3.CompoundButton.Switch">
        <item name="colorOnSurface">@color/base_300</item>
        <item name="colorPrimary">@color/main_500</item>

        <item name="colorOutline">@color/base_100</item>
        <item name="colorPrimaryContainer">@color/main_100</item>
    </style>

</resources>