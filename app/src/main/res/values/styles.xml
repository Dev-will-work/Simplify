<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--   <item name=""></item>                          -->
    <style name="my_base_text">
        <item name="android:textColor">@color/base_900</item>
    </style>
    <style name="H1" parent="my_base_text">
        <item name="android:fontFamily">@font/signika_light</item>
        <item name="android:textSize">30sp</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>
    <style name="H2" parent="my_base_text">
        <item name="android:fontFamily">@font/signika_light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.020833333333333332</item>
    </style>
    <style name="Subtitle" parent="my_base_text">
        <item name="android:fontFamily">@font/signika_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.009375</item>
    </style>
    <style name="Body_1" parent="my_base_text">
        <item name="android:fontFamily">@font/signika_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03125</item>
    </style>
    <style name="Body_2" parent="my_base_text">
        <item name="android:fontFamily">@font/signika_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.017857142857142856</item>
    </style>
    <style name="Button" parent="my_base_text">
        <item name="android:fontFamily">@font/signika_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.08928571428571429</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Caption" parent="my_base_text">
        <item name="android:fontFamily">@font/signika_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.03333333333333333</item>
    </style>
    <style name="Secondary" parent="my_base_text">
        <item name="android:fontFamily">@font/signika_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.017857142857142856</item>
    </style>

    <style name="text_field" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/text_field_drawable</item>
        <item name="android:textColor">@color/base_900</item>
<!--        <item name="android:backgroundTint">@color/base_100</item>-->
    </style>

    <style name="my_base_button" parent="@android:style/Widget.Button">
        <item name="android:fontFamily">@font/signika_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.08928571428571429</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/base_0</item>
    </style>
    <style name="primary_button" parent="my_base_button">
        <item name="android:background">@null</item>
        <item name="backgroundTint">@color/main_500</item>
    </style>
    <style name="secondary_button" parent="my_base_button">
        <item name="android:background">@null</item>
        <item name="backgroundTint">@color/base_0</item>
        <item name="strokeColor">@color/main_500</item>
        <item name="strokeWidth">2dp</item>
    </style>
    <style name="text_button" parent="my_base_button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/base_900</item>
    </style>
    <style name="image_button" parent="@android:style/Widget.ImageButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="input_frame">
        <item name="android:textColorHint">@color/base_500</item>
        <item name="android:textColor">@color/base_900</item>
        <item name="android:fontFamily">@font/signika_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03125</item>
    </style>
    <style name="output_frame">
        <item name="android:textColorHint">@color/base_500</item>
        <item name="android:textColor">@color/base_900</item>
        <item name="android:fontFamily">@font/signika_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03125</item>
    </style>

</resources>